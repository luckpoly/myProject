<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/list_item_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.brandsh.tiaoshi.widget.CircleImageView
            android:id="@+id/store_evaluate_civ_head"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/default_head_img"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/store_evaluate_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="一米阳光"
            android:textSize="13sp"/>

        <LinearLayout
            android:id="@+id/store_evaluate_ll_star"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/store_evaluate_ivstart1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/rating_bar_list_focus" />

            <ImageView
                android:id="@+id/store_evaluate_ivstart2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/rating_bar_list_focus" />

            <ImageView
                android:id="@+id/store_evaluate_ivstart3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/rating_bar_list_focus" />

            <ImageView
                android:id="@+id/store_evaluate_ivstart4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/rating_bar_list_focus" />

            <ImageView
                android:id="@+id/store_evaluate_ivstart5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/rating_bar_list_focus" />
        </LinearLayout>

        <TextView
            android:id="@+id/store_evaluate_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2016-03-09"
            android:layout_marginRight="16dp"
            android:textSize="13sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/store_evaluate_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="饿了么，饿了你就多吃点，饿了么，饿了你就多吃点饿了么，饿了你就多吃点饿了么，饿了你就多吃点饿了么，饿了你就多吃点饿了么，饿了你就多吃点饿了么，饿了你就多吃点饿了么，饿了你就多吃点饿了么，饿了你就多吃点饿了么，饿了你就多吃点饿了么，饿了你就多吃点饿了么，饿了你就多吃点饿了么，饿了你就多吃点饿了么，饿了你就多吃点饿了么，饿了你就多吃点饿了么，饿了你就多吃点饿了么，饿了你就多吃点饿了么，饿了你就多吃点饿了么，饿了你就多吃点饿了么，饿了你就多吃点" />

    <LinearLayout
        android:id="@+id/store_evaluate_ll_piclist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        >

        <ImageView
            android:id="@+id/store_evaluate_iv1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/store_evaluate_iv2"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="4dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/store_evaluate_iv3"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="4dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/store_evaluate_iv4"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="4dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/store_evaluate_iv5"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="4dp"
            android:scaleType="fitXY"/>

    </LinearLayout>

</LinearLayout>