<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_hui"
    android:orientation="vertical"
    >
   <include layout="@layout/title_bar_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/login_phone"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:textColorHint="#adadad"
                android:inputType="phone"
                android:hint="手机号"
                android:textSize="15sp"
                android:background="@null"/>
            <Button
                android:id="@+id/register_btn_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:background="@drawable/btn_code"
                android:text="验证码(60秒)"
                android:textSize="12sp"
                android:textColor="@color/text_color" />
        </LinearLayout>
        <TextView
           style="@style/lineStyleIn"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/login_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="验证码"
                android:textSize="15sp"
                android:textColorHint="#adadad"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_go_xy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#242424"
        android:textSize="12sp"
        android:layout_margin="10dp"
        android:text="温馨提示：未注册挑食账号的手机号，登录时将自动注册，且代表您已经同意《挑食用户协议》"/>

    <Button
        android:id="@+id/login_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_thime_bg"
        android:text="登录"
        android:textColor="@android:color/white"
        android:textSize="15sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/login_forgetpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:padding="10dp"
            android:visibility="gone"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="忘记密码"
            android:textColor="#009cff"
            android:textSize="12sp" />
        <LinearLayout
            android:id="@+id/rl_dsf_loglin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="44dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/tv_wx_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wx_login_icon"
                />
            <ImageView
                android:id="@+id/tv_qqlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:src="@mipmap/qq_login_icon"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#242424"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/rl_dsf_loglin"
            android:layout_marginBottom="33dp"
            android:text="第三方登录"/>
        <Button
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:padding="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="免费注册"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </RelativeLayout>
</LinearLayout>