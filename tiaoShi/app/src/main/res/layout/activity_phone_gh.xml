<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/bg_hui"
    android:layout_height="match_parent">
    <include layout="@layout/title_bar_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/login_phone"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:textColorHint="#adadad"
                android:inputType="phone"
                android:hint="手机号"
                android:textSize="15sp"
                android:background="@null"/>
            <Button
                android:id="@+id/register_btn_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:background="@drawable/btn_code"
                android:text="验证码(60秒)"
                android:textSize="12sp"
                android:textColor="@color/text_color" />
        </LinearLayout>
        <TextView
            style="@style/lineStyleIn"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/login_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="验证码"
                android:textSize="15sp"
                android:textColorHint="#adadad"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_go_xy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#242424"
        android:textSize="12sp"
        android:layout_margin="10dp"
        android:text="若当前号码已不用/丢失，或者无法接收到验证码。\n请联系客服：400-880-4121"/>

    <Button
        android:id="@+id/login_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_thime_bg"
        android:text="验证后绑定新手机"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</LinearLayout>