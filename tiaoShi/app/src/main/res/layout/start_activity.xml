<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/start_icon"
    android:orientation="vertical">
    <TextView
        android:id="@+id/start_btnHome"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:background="#80000000"
        android:layout_gravity="right"
       android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/bg"
        android:textSize="12sp"
        android:text="3跳过"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@mipmap/favouratestore"
        android:focusable="true"
        android:visibility="gone"
        android:focusableInTouchMode="true" >

        <EditText
            android:id="@+id/start_et"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:hint="输入商户ID"
            android:textSize="16sp"
            android:textColorHint="#e4fdd7"
            android:textColor="#fff"
            android:background="@null"
            android:layout_above="@+id/start_btnStore"
            android:inputType="number"
            android:layout_marginBottom="5dp" />
        <View
            android:id="@+id/start_v"
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:background="#fff"
            android:layout_above="@+id/start_btnStore"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="3dp"
            android:layout_above="@+id/start_v"
            android:background="#fff"
            android:layout_alignLeft="@+id/start_v"/>

        <View
            android:layout_width="1dp"
            android:layout_height="3dp"
            android:layout_above="@+id/start_v"
            android:background="#fff"
            android:layout_alignRight="@+id/start_v"/>

        <Button
            android:id="@+id/start_btnStore"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:text="进入喜爱商户>>"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_style1"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:background="@mipmap/center">

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@mipmap/enterhome">

        <Button

            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:text="进入主页>>"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_style1"/>

    </RelativeLayout>

</LinearLayout>