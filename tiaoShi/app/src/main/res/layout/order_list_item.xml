<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/list_item_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/order_list_item_tvOrderNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="#575757"
            android:text="订单编号:20160310248"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="50dp"
            android:drawableLeft="@mipmap/time"
            android:layout_toLeftOf="@+id/order_list_item_tvOrderStatus"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/order_list_item_tvOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="#fb3200"
            android:layout_alignParentRight="true"
            android:text="未付款"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d0d0d0"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <com.brandsh.tiaoshi.widget.OrderListItemListView
        android:id="@+id/order_list_item_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:divider="@null"
        android:focusable="false"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d0d0d0"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/order_list_item_tvTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#575757"
            android:textSize="13sp"
            android:text="共3件,合计 ￥124元"/>

        <TextView
            android:id="@+id/tv_ordercancel"
            android:layout_width="66dp"
            android:layout_height="22dp"
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:background="@mipmap/bt_oldercancel"
            />

        <TextView
            android:id="@+id/tv_oldedelete"
            android:layout_width="66dp"
            android:layout_height="22dp"
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:background="@mipmap/bt_olderdelete"
            />

        <TextView
            android:id="@+id/tv_oldermore"
            android:layout_width="66dp"
            android:layout_height="22dp"
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:background="@mipmap/bt_older"
           />
        <TextView
            android:id="@+id/tv_Confirm_Payment"
            android:layout_width="66dp"
            android:layout_height="22dp"
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:background="@mipmap/confirm"
            />
        <TextView
            android:id="@+id/tv_refund"
            android:layout_width="66dp"
            android:layout_height="22dp"
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:background="@mipmap/refund"
            />
        <TextView
            android:id="@+id/tv_dailingqu"
            android:layout_width="66dp"
            android:layout_height="22dp"
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:background="@mipmap/dailingqu"
            />
        <TextView
            android:id="@+id/tv_fenxiang"
            android:layout_width="66dp"
            android:layout_height="22dp"
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:background="@mipmap/fenxiang"
            />
        <TextView
            android:id="@+id/tv_chongxinfx"
            android:layout_width="66dp"
            android:layout_height="22dp"
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:background="@mipmap/chongxinfx"
            />
        <TextView
            android:id="@+id/tv_yilingqu"
            android:layout_width="66dp"
            android:layout_height="22dp"
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:text="已被领取"
            android:gravity="center"
           android:textSize="12sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#dedede"/>

</LinearLayout>