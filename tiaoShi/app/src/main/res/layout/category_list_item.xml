<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/list_item_color">

    <RelativeLayout
        android:id="@+id/category_list_item_rl"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/relativelayout_style2">

        <ImageView
            android:id="@+id/category_list_item_iv"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/category_list_item_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/category_list_item_rl"
        android:orientation="vertical">

        <TextView
            android:id="@+id/category_list_item_tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新西兰进口猕猴桃"
            android:textColor="#343434"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/category_list_item_tvStoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="多多鲜果 陆家嘴店"
            android:textColor="#575757"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/category_list_item_tvMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="满120元免费配送"
            android:textColor="#575757"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/category_list_item_tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="￥16"
                android:textColor="#fb3200"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/category_list_item_tvUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:text="元/斤"
                android:textColor="#343434"
                android:textSize="10sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp">

                <View
                    android:id="@+id/category_list_item_view"
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:layout_alignLeft="@+id/category_list_item_tvOldPrice"
                    android:layout_alignRight="@+id/category_list_item_tvOldPrice"
                    android:layout_centerInParent="true"
                    android:background="#575757" />

                <TextView
                    android:id="@+id/category_list_item_tvOldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥32"
                    android:textColor="#575757"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/category_list_item_tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/category_list_item_rl"
        android:layout_marginRight="10dp"
        android:text="0.1km"
        android:textColor="#575757"
        android:textSize="10sp" />


    <TextView
        android:id="@+id/category_list_item_tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/category_list_item_rl"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="月销量:23104"
        android:textColor="#575757"
        android:textSize="11sp" />

</RelativeLayout>