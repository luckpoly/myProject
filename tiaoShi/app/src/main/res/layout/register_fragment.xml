<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 头部 -->
    <include
        layout="@layout/title_bar_view" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:background="@drawable/edittext_rl_style" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cellphone"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/register_phone"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawablePadding="5dp"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:phoneNumber="true"
            android:textSize="15sp" />

        <Button
            android:id="@+id/register_btn_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/btn_code"
            android:text="验证码\n(60秒)"
            android:textSize="12sp"
            android:textColor="@color/text_color" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_rl_style">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/lock"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"/>

        <EditText
            android:id="@+id/register_et_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_rl_style">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/lock"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"/>

        <EditText
            android:id="@+id/register_et_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="设置密码(6~16位数字或英文)"
            android:inputType="textPassword"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:id="@+id/register_btn_reg"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/register_submit_btn1"
        android:text="注册"
        android:textSize="18sp"
        android:textColor="@color/text_color" />

    <LinearLayout
        android:id="@+id/register_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/register_ivAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/unselect"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已经阅读并接受"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/register_tvAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="挑食用户协议"
            android:textColor="#5fb336"/>

    </LinearLayout>

</LinearLayout>