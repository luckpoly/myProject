<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/list_item_color">
    <RelativeLayout
        android:id="@+id/qiangxian_item_rl"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/relativelayout_style2">

        <ImageView
            android:id="@+id/qiangxian_item_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/list_item_color">
    <LinearLayout
        android:id="@+id/qiangxian_item_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/qiangxian_item_tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="河北巨峰葡萄"
                android:textColor="#343434"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/qiangxian_item_ivGift"
                android:layout_width="30dp"
                android:layout_height="16dp"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/qiangxian_item_ivChaoZhi"
                android:layout_width="30dp"
                android:layout_height="16dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="4dp" />

            <ImageView
                android:id="@+id/qiangxian_item_ivChaoZhi2"
                android:layout_width="30dp"
                android:layout_height="16dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="4dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/qiangxian_item_tvStoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="多多鲜果 陆家嘴店"
            android:textColor="#8e8e8e"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/qiangxian_item_tvMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="满120元免费配送"
            android:textColor="#8e8e8e"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/qiangxian_item_tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥16"
                android:textColor="#fb3200"
                android:textSize="14sp"
                android:layout_gravity="bottom"/>

            <TextView
                android:id="@+id/qiangxian_item_tvUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元/斤"
                android:textColor="#343434"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="bottom"/>
        </LinearLayout>
    </LinearLayout>



    <TextView
        android:id="@+id/qiangxian_item_tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:text="300m"
        android:layout_marginRight="10dp"
        android:textColor="#575757"
        android:textSize="11sp"/>

</RelativeLayout>
</LinearLayout>