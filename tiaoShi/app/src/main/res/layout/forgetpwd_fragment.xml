<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_color"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_hui"
    android:orientation="vertical">
    <!-- 头部 -->
    <include
        layout="@layout/title_bar_view" />
    <TextView
       style="@style/lineStyle"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/forgetpwd_phone"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:textColorHint="#adadad"
                android:inputType="phone"
                android:hint="请输入手机号"
                android:textSize="15sp"
                android:background="@null"/>
            <Button
                android:id="@+id/forgetpwd_btn_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:background="@drawable/btn_code"
                android:text="验证码(60秒)"
                android:textSize="12sp"
                android:textColor="@color/text_color" />
        </LinearLayout>
        <TextView
            style="@style/lineStyleIn"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/forgetpwd_et_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="输入验证码"
                android:textSize="15sp"
                android:textColorHint="#adadad"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:text="设置新密码"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:background="@color/bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/forgetpwd_et_pwd"
                android:layout_width="match_parent"
                android:hint="设置新密码(6~16位数字或英文)"
                android:textColorHint="#adadad"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:layout_height="match_parent"
                android:background="@null"/>
        </LinearLayout>
        <TextView
            style="@style/lineStyleIn"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/forgetpwd_et_surepwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请重复密码"
                android:inputType="textPassword"
                android:textColorHint="#adadad"
                android:textSize="15sp"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>



        <Button
            android:id="@+id/forgetpwd_btn_sure"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_thime_bg"
            android:text="确定"
            android:textColor="@color/text_color" />


    </LinearLayout>
</LinearLayout>
