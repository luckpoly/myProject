<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_color"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white">
        <RelativeLayout
            android:id="@+id/product_detail_rlBack"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/backlan" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textColor="@color/theme_color"
            android:textSize="18sp" />
    </RelativeLayout>
    <TextView
        style="@style/lineStyle" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:orientation="vertical"
                android:paddingBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="订单号 : "
                        android:textColor="#575757"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_order_code"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="" />
                    <TextView
                        android:id="@+id/tv_store_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="鲜果时光"
                        android:textColor="#575757"
                        android:textSize="14sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#dedede"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>
                <com.brandsh.tiaoshi.widget.ProductDetailImgListView
                    android:id="@+id/order_product_PDILV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#dedede"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>
                <TextView
                    android:id="@+id/tv_order_totalprice"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical|end"
                    android:text="共  件,合计￥  元"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#dedede"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="总体评价" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end">
                        <ImageView
                            android:id="@+id/iv_add_evaluation_star1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/rating_bar_facus" />
                        <ImageView
                            android:id="@+id/iv_add_evaluation_star2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/rating_bar_facus" />
                        <ImageView
                            android:id="@+id/iv_add_evaluation_star3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/rating_bar_facus" />
                        <ImageView
                            android:id="@+id/iv_add_evaluation_star4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/rating_bar_facus" />
                        <ImageView
                            android:id="@+id/iv_add_evaluation_star5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/rating_bar_facus" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#dedede"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:text="评价描述"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#dedede" />
                <EditText
                    android:id="@+id/et_addevaluation"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#eeeeee"
                    android:gravity="start"
                    android:hint="来写点什么，让其他卖家参考吧~"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:textColor="#575757"
                    android:textColorHint="#a0a0a0"
                    android:textSize="14sp"
                    android:padding="16dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#dedede" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">
                    <com.brandsh.tiaoshi.widget.UploadImgGridView
                        android:id="@+id/gv_add_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numColumns="5"
                        android:overScrollMode="never"
                        android:layout_marginTop="10dp"/>
                    <ImageView
                        android:id="@+id/iv_add_img"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@mipmap/icon_add_img"
                        android:layout_marginTop="20dp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_add_evaluation"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rl_add_evaluation"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:text="发表评价"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </ScrollView>
</LinearLayout>