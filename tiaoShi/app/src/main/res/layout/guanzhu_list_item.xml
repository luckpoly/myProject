<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="130dp"
    android:background="@drawable/list_item_color">

    <RelativeLayout
        android:id="@+id/guanzhu_list_item_rl"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/relativelayout_style2">

        <ImageView
            android:id="@+id/guanzhu_list_item_iv"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/guanzhu_list_item_rl"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/guanzhu_list_item_tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#575757"
            android:textSize="16sp"
            android:text="Miss Wang的水果铺"/>

        <TextView
            android:id="@+id/guanzhu_list_item_tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#575757"
            android:textSize="12sp"
            android:text="满120元,免配送费"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/guanzhu_list_item_tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5fb336"
            android:textSize="12sp"
            android:text="有十种水果供你选择"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/guanzhu_list_item_ivStar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/rating_bar_list_normal"/>
            <ImageView
                android:id="@+id/guanzhu_list_item_ivStar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/rating_bar_list_normal"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/guanzhu_list_item_ivStar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/rating_bar_list_normal"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/guanzhu_list_item_ivStar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/rating_bar_list_normal"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/guanzhu_list_item_ivStar5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/rating_bar_list_normal"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/guanzhu_list_item_tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/guanzhu_list_item_rl"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:textColor="#575757"
        android:textSize="12sp"
        android:text="1.5km"/>


    <LinearLayout
        android:id="@+id/guanzhu_list_item_llGuanZhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/guanzhu_list_item_rl"
        android:layout_marginRight="15dp"
        android:background="@drawable/guanzhu"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/guanzhu_list_item_ivGuanZhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/heart1"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/guanzhu_list_item_tvGuanZhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:textColor="#fff"/>

    </LinearLayout>



</RelativeLayout>