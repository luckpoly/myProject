<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/bg_hui"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/month_order_datail"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/bg"
            android:padding="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#303030"
                android:textSize="15sp"
                android:text="当前状态："/>
            <com.brandsh.tiaoshi.widget.SwitchButton
                android:id="@+id/switch_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                />
            <TextView
                android:id="@+id/tv_go_goods"
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/theme_color"
                android:visibility="gone"
                android:background="@drawable/tv_biankuanghuang_month"
                android:text="去下单"/>
        </RelativeLayout>
        <TextView
          style="@style/lineStyle"/>
        <LinearLayout
            android:id="@+id/ll_isShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_go_Orderlist"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/bg"
                android:padding="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#303030"
                    android:textSize="15sp"
                    android:text="套餐余量"/>
               <TextView
                   android:id="@+id/tv_yuliang"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:textColor="@color/theme_color"
                   android:text=""
                   android:drawableRight="@mipmap/icon_go_right"/>
            </RelativeLayout>

            <TextView
                style="@style/lineStyle"/>
            <LinearLayout
                android:id="@+id/ll_isShow_wan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/bg"
              android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:gravity="center_vertical"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="15sp"
                       android:textColor="#303030"
                       android:text="佩佩"
                       android:id="@+id/tv_add_name" />

                   <TextView
                       android:id="@+id/tv_add_content"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="12sp"
                       android:textColor="#4a4949"
                       android:layout_marginTop="3dp"
                       android:text="上海市宝山区三门路561号1b04"/>
               </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:id="@+id/tv_chooseAddress"
                        android:layout_width="65dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/theme_color"
                        android:text="更改地址"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:background="@drawable/tv_biankuanghuang_month"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                style="@style/lineStyle"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/bg"
                android:padding="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#303030"
                    android:textSize="15sp"
                    android:text="第一杯："/>
                <TextView
                    android:id="@+id/tv_timeContent1"
                    android:layout_toRightOf="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#303030"
                    android:textSize="15sp"
                    android:text="早上8:00"/>
                <TextView
                    android:id="@+id/tv_time_1"
                    android:layout_width="65dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/theme_color"
                    android:text="编辑"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:background="@drawable/tv_biankuanghuang_month"/>
            </RelativeLayout>
            <TextView
                style="@style/lineStyle"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/bg"
                android:padding="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#303030"
                    android:textSize="15sp"
                    android:text="第二杯："
                    />
                <TextView
                    android:id="@+id/tv_timeContent2"
                    android:layout_toRightOf="@+id/name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#303030"
                    android:textSize="15sp"
                    android:text="晚上18:30"
                    />
                <TextView
                    android:id="@+id/tv_time_2"
                    android:layout_width="65dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/theme_color"
                    android:text="编辑"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:background="@drawable/tv_biankuanghuang_month"/>
            </RelativeLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="42dp"
               android:paddingLeft="15dp"
               android:paddingRight="15dp"
               android:background="#f3f3f3"
               android:gravity="center_vertical"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/tv_bianji"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:textColor="@color/theme_color"
                   android:layout_alignParentRight="true"
                   android:text="编辑"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="#303030"
                   android:textSize="15sp"
                   android:text="备注"
                   android:layout_centerVertical="true"
                   android:id="@+id/textView2" />
           </RelativeLayout>
            <TextView
                android:id="@+id/tv_beizhu"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:background="@color/bg"
                />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="44dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@mipmap/backlan"
            android:scaleType="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的套餐"
            android:textSize="18sp"
            android:textColor="@color/theme_color"/>
    </RelativeLayout>
</RelativeLayout>