<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/cm_bg_hui"
    android:layout_height="match_parent">
    <include layout="@layout/oto_titlebase_layout"/>
    <TextView
       style="@style/lineStyle" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:background="@color/bg"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/activityTextTitleStyle"
            android:text="活动名称:"/>
        <EditText
            android:id="@+id/et_act_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/activityTextInStyle"
            android:background="@null"/>
    </LinearLayout>
    <TextView
      style="@style/lineStyleIn"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@color/bg"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/activityTextTitleStyle"
            android:text="人　　均："/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_act_money"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="number"
                style="@style/activityTextInStyle"
                android:background="@null"
               />
            <TextView
               style="@style/lineStyle" />

        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/activityTextTitleStyle"
            android:text="元"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/activityTextTitleStyle"
            android:text="报名人数："/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_act_pNo"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/activityTextInStyle"
                android:inputType="number"
                android:background="@null"
                />
            <TextView
                style="@style/lineStyle" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/activityTextTitleStyle"
            android:text="人"/>
    </LinearLayout>
    <TextView
       style="@style/lineStyleIn" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@color/bg"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_select_phonetype"
            android:layout_width="wrap_content"
            android:background="@drawable/tv_biankuang"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_phone_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:paddingTop="5dp"
            android:paddingBottom="5dp"
            style="@style/activityTextTitleStyle"
            android:text="手机"/>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="▼"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="100dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_link_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/activityTextInStyle"
                android:background="@null"
                android:gravity="center" />
            <TextView
                style="@style/lineStyle" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:background="@color/bg"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/activityTextTitleStyle"
            android:text="活动时间:"/>
        <TextView
            android:id="@+id/inputDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="点击选择时间"
            style="@style/activityTextInStyle"
            />
    </LinearLayout>
    <TextView
       style="@style/lineStyleIn"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@color/bg"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/activityTextTitleStyle"
            android:text="报名时间:"/>
        <TextView
            android:id="@+id/inputDate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/activityTextInStyle"
            android:text="点击选择时间"
            />
    </LinearLayout>
    <TextView
        style="@style/lineStyleIn"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@color/bg"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/activityTextTitleStyle"
            android:text="结束时间:"/>
        <TextView
            android:id="@+id/inputDate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/activityTextInStyle"
            android:text="点击选择时间"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        style="@style/activityTextTitleStyle"
        android:text="活动内容"/>
    <TextView
       style="@style/lineStyleIn" />
    <EditText
        android:id="@+id/et_act_content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp"
        android:gravity="top"
        style="@style/activityTextInStyle"
        android:background="@color/bg"/>
<LinearLayout
    android:layout_width="match_parent"
    android:background="@color/bg"
    android:layout_marginTop="10dp"
    android:layout_height="50dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        style="@style/activityTextTitleStyle"
        android:text="活动图片"/>
</LinearLayout>
        <TextView
           style="@style/lineStyleIn" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_addphoto"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/bg"
            android:scrollbars="horizontal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/tv_fabu"
                android:layout_width="165dp"
                android:layout_height="33dp"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:textSize="15sp"
                android:background="@drawable/loginbt_yaunjiaolan"
                android:textColor="@color/bg"
                android:layout_marginBottom="56dp"
                android:layout_centerInParent="true"
                android:text="发布"/>
        </RelativeLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>