<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/base_title_bar_view"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <WebView
            android:id="@+id/wv_showDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></WebView>
        <LinearLayout
            android:id="@+id/ll_default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/yd_zixuntai_bg"/>
            <TextView
                android:id="@+id/tv_show_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="还没有常见的问题"/>
            <ImageView
                android:id="@+id/iv_go_call"
                android:layout_width="142dp"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:layout_marginTop="100dp"
                android:src="@mipmap/yd_zixuntai_lianxi"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>