<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/cm_bg_hui"
    android:layout_height="match_parent">
    <include
        layout="@layout/base_title_bar_view" />
    <RelativeLayout
        android:id="@+id/rl_yuyue_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_transactiondetail1"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/yuyue_time"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/tv_time_title"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_transactiondetail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="15sp"
            android:text="服务时间"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="选择时间"
            android:layout_marginLeft="15sp"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_go_right"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_yuyue_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_transactiondetail2"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/yuyue_name"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/tv_name_title"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_transactiondetail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="15sp"

            android:text="姓名：　"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="输入姓名"
            android:layout_marginLeft="15sp"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_go_right"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_yuyue_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_transactiondetail3"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/yuyue_address"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/tv_address_title"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_transactiondetail3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="15sp"
            android:text="地址：　"/>
        <TextView
            android:id="@+id/tv_address"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="选择地址"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="15sp"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_go_right"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_yuyue_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_transactiondetail4"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/yuyue_icon"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/tv_phone_title"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_transactiondetail4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="15sp"
            android:text="电话：　"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_phone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="15sp"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_go_right"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_yuyue_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_transactiondetail"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/yuyue_type"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/tv_type_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_transactiondetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="15sp"
            android:text="服务类型"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:src="@mipmap/icon_go_right"/>
    </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="服务备注:"/>
        <EditText
            android:id="@+id/et_remark"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="12dp"
            android:background="@color/bg"
            android:paddingBottom="20dp"
            android:textColor="@color/textColor_shenhei"
            android:textSize="12sp"
            android:gravity="top"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_yuyue"
            android:layout_width="165dp"
            android:layout_height="33dp"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:background="@drawable/loginbt_yaunjiaolan"
            android:text="点击预约"
            android:textColor="@color/bg"/>
    </RelativeLayout>

</LinearLayout>