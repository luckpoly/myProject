<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/cm_bg_hui"
    android:layout_height="match_parent">
    <include
        android:id="@+id/ll_login_title"
        layout="@layout/title_bar_view"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:background="@color/bg"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_orderNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="DH1234567812"
            android:textSize="15sp"
            android:layout_marginLeft="22dp"
            android:textColor="@color/shallow_text_color"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_orderTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2016/01/11 18:00"
            android:textSize="12sp"
            android:textColor="@color/shallow_text_color"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hint_text_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/bg">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_order_price"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:text="5元"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginRight="40dp"
            android:text="1.0公里/3公斤"
            android:id="@+id/tv_orderUnit" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务态度："
            android:textSize="15sp"
            android:layout_marginLeft="22dp"
            android:textColor="@color/shallow_text_color"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv1"
                android:layout_marginRight="2dp"
                android:src="@mipmap/star"
                android:scaleType="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv2"
                android:layout_marginRight="2dp"
                android:src="@mipmap/non_star"
                android:scaleType="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv3"
                android:layout_marginRight="2dp"
                android:src="@mipmap/non_star"
                android:scaleType="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv4"
                android:layout_marginRight="2dp"
                android:src="@mipmap/non_star"
                android:scaleType="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv5"
                android:layout_marginRight="2dp"
                android:src="@mipmap/non_star"
                android:scaleType="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="15sp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/edit_bg"
        android:gravity="top"
        android:padding="5dp"
        android:textColor="@color/shallow_text_color"
        android:hint="请输入您的评价~"
        android:id="@+id/et_evaluate" />
    <Button
        android:id="@+id/bt_commit"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:text="提交"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/loginbt_yaunjiaolan"
        android:layout_width="100dp"
        android:layout_height="40dp" />



</LinearLayout>