<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">
    <include layout="@layout/base_title_bar_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/convenient_banner"
                android:layout_width="match_parent"
                android:layout_height="150dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/cm_bg_hui"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:textColor="#242424"
                android:text="疾病知识"/>

            <com.goodfood86.tiaoshi.order121Project.widget.NoScroolGridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:numColumns="5"
                android:background="@color/bg"
                android:id="@+id/gv_group"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="251dp"
                android:padding="10dp"
                android:background="@mipmap/tuijian_bg"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.48"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_cishan"
                        android:layout_width="0dp"
                        android:layout_weight="1.43"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:layout_margin="5dp"
                        android:src="@mipmap/yiliao_jiuzhu"/>
                   <ImageView
                       android:id="@+id/iv_baobaoyimiao"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:src="@mipmap/yiliao_tongzhi"
                       android:scaleType="fitXY"
                       android:layout_margin="5dp"
                       android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_jiankang"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/yiliao_zixun"/>
                    <ImageView
                        android:id="@+id/iv_kuaisu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_margin="5dp"
                        android:src="@mipmap/yiliao_kuaisu"/>
                    <ImageView
                        android:id="@+id/iv_yuer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_margin="5dp"
                        android:src="@mipmap/yiliao_yuer"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_goselect_yaodian"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:background="@mipmap/yiliao_title_bg"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/bg"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:text="24小时药店"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查询"/>
                <ImageView
                    android:layout_margin="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_go_right"/>
            </LinearLayout>
            <com.goodfood86.tiaoshi.order121Project.widget.NoScroolGridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg"
                android:numColumns="1"
                android:id="@+id/gv_group_partners"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>