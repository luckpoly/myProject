<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/bg"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_order_title"
        android:background="#8892ff"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tv_no"
            android:layout_marginLeft="23dp"
            android:layout_centerVertical="true"
            android:text="DH45612381354"
            android:textSize="15dp"
            android:textColor="@color/bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/center"
            android:layout_centerInParent="true"
            android:layout_width="1px"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_toRightOf="@+id/center"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="2016/01/11"
            android:textSize="12dp"
            android:textColor="@color/bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_type"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="待配送"
            android:textColor="@color/bg"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <TextView
            android:id="@+id/tv_price"
            android:layout_marginLeft="65dp"
            android:layout_centerVertical="true"
            android:text="5元"
            android:textColor="@color/shallow_text_color"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_unit"
            android:layout_marginRight="65dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="1.0公里/3公斤"
            android:textColor="@color/shallow_text_color"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#dedede"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="34dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_send_address"
                    android:text="上海市宝山区三门路561号"
                    android:textColor="@color/shallow_text_color"
                    android:textSize="10dp"
                    android:layout_marginLeft="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:text="8栋1b04室"
                    android:textColor="@color/shallow_text_color"
                    android:textSize="10dp"
                    android:layout_below="@+id/tv_send_address"
                    android:id="@+id/tv_send_address_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
        <ImageView
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@mipmap/order_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_receive_address"
                    android:text="上海市宝山区三门路561号"
                    android:textColor="@color/shallow_text_color"
                    android:textSize="10dp"
                    android:layout_marginRight="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:text="8栋1b04室"
                    android:textColor="@color/shallow_text_color"
                    android:textSize="10dp"
                    android:layout_below="@+id/tv_receive_address"
                    android:id="@+id/tv_receive_address_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_foot"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="立即支付"
            android:textColor="@color/shallow_text_color"
            android:textSize="12dp"
            android:id="@+id/tv_topayorcancal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/line"
        />

</LinearLayout>