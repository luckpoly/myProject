<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/bg"
    android:layout_height="80dp">
<TextView
    android:id="@+id/tv_address"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/shallow_text_color"
    android:textSize="15sp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:text="上海市宝山区三门路561号8栋1B04"/>
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456789"
        android:textSize="13sp"
        android:textColor="@color/shallow_text_color"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="7dp"
      android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/address_del"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:scaleType="center"
        android:background="@mipmap/shanchu"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        />
    <ImageView
        android:id="@+id/iv_edit"
        android:layout_toLeftOf="@+id/address_del"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:scaleType="center"
        android:background="@mipmap/shape"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="5dp"
        />
</RelativeLayout>