<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cm_bg_hui"
    >
    <include layout="@layout/base_title_bar_view"/>
    <ScrollView
        android:scrollbars="none"
        android:layout_below="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/convenient_banner"
                android:layout_width="match_parent"
                android:layout_height="150dp" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/bg"
                android:id="@+id/li_address"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="horizontal"
                android:layout_below="@+id/convenient_banner">
                <RelativeLayout
                    android:id="@+id/rl_sendaddress"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/tv_sendaddress"
                        android:textColor="@color/hint_text_color"
                        android:textSize="15dp"
                        android:text="请输入寄件地址"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent">
                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:background="#dedede"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:id="@+id/rl_reciveaddress"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/tv_reciveaddress"
                        android:textColor="@color/hint_text_color"
                        android:textSize="15dp"
                        android:text="请输入收件地址"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@color/bg"
                android:id="@+id/li_timeandweight"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="horizontal"
                android:layout_below="@+id/li_address">
                <RelativeLayout
                    android:id="@+id/rl_gettime"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                        android:textColor="#A0A0A0"
                        android:textSize="15dp"
                        android:text="取件时间："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_gettime"
                            android:text="立即取件"
                            android:textSize="18dp"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent">
                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:background="#dedede"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:id="@+id/rl_weight"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btn_minus"
                            android:background="@mipmap/icon_btn_minus"
                            android:layout_marginRight="10dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <TextView
                            android:id="@+id/tv_weight"
                            android:textColor="@color/hint_text_color"
                            android:textSize="18dp"
                            android:text="3公斤以下"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Button
                            android:id="@+id/btn_add"
                            android:layout_marginLeft="10dp"
                            android:background="@mipmap/icon_btn_add"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#bfbfbf"
                    android:textSize="12dp"
                    android:text="注：三公斤以上物品暂时不配送"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/bg"
                android:id="@+id/li_price"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="horizontal"
                android:layout_below="@+id/li_timeandweight">
                <RelativeLayout
                    android:id="@+id/rl_price"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/hint_text_color"
                            android:textSize="12dp"
                            android:text="总价（元）"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_marginTop="10dp"
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:text="5"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent">
                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:background="#dedede"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:id="@+id/rl_distance"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/hint_text_color"
                            android:textSize="12dp"
                            android:text="距离（公里）"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:textColor="@color/text_color"
                            android:textSize="20dp"
                            android:id="@+id/tv_distance"
                            android:text="0.0"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:layout_margin="25dp"
                    android:gravity="center"
                    android:text="下一步"
                    android:textColor="@color/bg"
                    android:textSize="20dp"
                    android:id="@+id/btn_go"
                    android:layout_width="165dp"
                    android:layout_height="37dp"
                    android:background="@drawable/gv_item_bg"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
