                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/fwdj_jiadian"/>
                </LinearLayout>
            </LinearLayout>
            <View
