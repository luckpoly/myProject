<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">
        <com.goodfood86.tiaoshi.order121Project.widget.CircleImageView
            android:id="@+id/iv_llq_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@mipmap/belle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_llq_head"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="亡灵"
                    android:textSize="18sp"
                    android:textColor="#38afff"
                    />
                <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#242424"
                    android:textSize="14sp"
                    android:padding="3dp"
                    android:visibility="gone"
                    android:text="删除"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#242424"
                android:textSize="14sp"
                android:maxLines="6"
                android:ellipsize="end"
                android:text="弟弟顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶多多多多多多多多多多多多多多多多多"/>
            <TextView
                android:id="@+id/tv_showall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingRight="5dp"
                android:textColor="#38afff"
                android:text="全文"/>
            <com.goodfood86.tiaoshi.order121Project.widget.NoScroolGridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:id="@+id/gv_group_partners"
                />
            <RelativeLayout
                android:id="@+id/rl_zixun_huifu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#094a73"
                    android:textSize="14sp"
                    android:text="回复："/>
                <TextView
                    android:id="@+id/tv_zixun_huifu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text=""/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="#7b7b7b"
                android:layout_marginTop="10dp"
                android:text=""/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d2d2d2"/>
    </RelativeLayout>

</LinearLayout>