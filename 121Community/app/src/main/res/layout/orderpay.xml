<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/cm_bg_hui"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title_bar"
        layout="@layout/base_title_bar_view"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/send_address"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="23dp"
                android:singleLine="true"
                android:textSize="12dp"
                android:textColor="@color/shallow_text_color"
                android:text="三门路561号1B04室"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/send_info"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="23dp"
                android:singleLine="true"
                android:textSize="12dp"
                android:textColor="@color/shallow_text_color"
                android:text="张三三   18764584896"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="2px"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/line"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/re_address"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="39dp"
                android:singleLine="true"
                android:textSize="12dp"
                android:textColor="@color/shallow_text_color"
                android:text="三门路561号1B04室"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/re_info"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="39dp"
                android:singleLine="true"
                android:textSize="12dp"
                android:textColor="@color/shallow_text_color"
                android:text="张三三   18764584896"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/line"/>
    <LinearLayout
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_thing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:text="物品名称："
                android:textColor="@color/shallow_text_color"
                android:textSize="12dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="2px"
            android:layout_marginTop="10dp"
            android:background="@color/line"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:textColor="@color/shallow_text_color"
                android:textSize="12dp"
                android:text="数量：1件"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/line"/>
    <LinearLayout
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:text="备注："
                android:textColor="@color/shallow_text_color"
                android:textSize="12dp"
               />
            <TextView
                android:id="@+id/tv_beizhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="选填"
                android:textColor="@color/hint_text_color"
                android:textSize="12dp"
                />

        </LinearLayout>
        <View
            android:layout_width="2px"
            android:layout_marginBottom="10dp"
            android:background="@color/line"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:textColor="@color/shallow_text_color"
                android:textSize="12dp"
                android:text="取件时间：立即取件"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/rl_totalPrice">
        <TextView
            android:layout_marginLeft="23dp"
            android:layout_centerVertical="true"
            android:text="订单总额："
            android:textSize="12dp"
            android:textColor="@color/shallow_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_total_price"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="5元"
            android:textSize="18dp"
            android:textColor="@color/text_color"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:background="@color/bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_marginLeft="23dp"
            android:text="还需支付："
            android:textSize="12dp"
            android:textColor="@color/shallow_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_needtopay"
           android:layout_marginLeft="10dp"
            android:text="5元"
            android:textSize="18dp"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/line"/>
    <RelativeLayout
        android:id="@+id/rl_apily"
        android:layout_marginTop="5dp"
        android:background="@color/bg"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_alipay"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/alipay"
            android:scaleType="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_alipay"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#575757"
                android:textSize="15sp"
                android:text="支付宝支付"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#a0a0a0"
                android:textSize="10sp"
                android:text="推荐有支付宝账号的用户使用"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_apliy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/pay_check"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#dedede"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:id="@+id/rl_weixing">

            <ImageView
                android:id="@+id/pay_order_ivLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pay_weixin"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/iv_weixing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/pay_uncheck"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
    <Button
        android:id="@+id/comfiretopay"
        android:layout_marginTop="59dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:text="确认支付"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/bg"
        android:background="@drawable/gv_item_bg"
        android:layout_width="match_parent"
        android:layout_height="44dp" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>