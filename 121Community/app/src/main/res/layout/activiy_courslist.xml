<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/base_title_bar_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/tv_type1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:textColor="@color/bg"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@mipmap/jy_wenhua_bg"
           />
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_type2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:textColor="@color/bg"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@mipmap/jy_yuwen_bg"
            android:text=""/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_type3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:textColor="@color/bg"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@mipmap/jy_shuxue_bg"
            android:text=""/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_type4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:textColor="@color/bg"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@mipmap/jy_yingyu_bg"
            android:text=""/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/tuijian_bg"
        android:layout_margin="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/activity_PTRListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="0dp"
            android:divider="@color/transparent"
            ptr:ptrAnimationStyle="flip"
            />
    </LinearLayout>
</LinearLayout>