<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/cm_bg_hui"
    android:layout_height="match_parent">
  <include
      layout="@layout/oto_titlebase_layout"
      />
  <TextView
     style="@style/lineStyle"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/bg"
      android:layout_marginTop="10dp"
      android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="@dimen/moneytable"
        android:text="配送价格如下表："
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
      <TextView
          android:id="@+id/tv_moneytable_dw"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="4"
          android:textSize="@dimen/moneytable"
          />
      <TextView
          android:id="@+id/tv_moneytable_dwm"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:textSize="@dimen/moneytable"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
      <TextView
          android:id="@+id/tv_moneytable_d1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="4"
          android:textSize="@dimen/moneytable"
          />
      <TextView
          android:id="@+id/tv_moneytable_dm1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:textSize="@dimen/moneytable"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
      <TextView
          android:id="@+id/tv_default_w1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="4"
          android:textSize="@dimen/moneytable"

          />
      <TextView
          android:id="@+id/tv_moneytable_wm1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:textSize="@dimen/moneytable"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
      <TextView
          android:id="@+id/tv_moneytable_maxww"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="4"
          android:visibility="gone"
          android:textSize="@dimen/moneytable"
          android:text="最大重量不超过"
          />
      <TextView
          android:id="@+id/tv_moneytable_maxw"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:textSize="@dimen/moneytable"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
      <TextView
          android:id="@+id/tv_moneytable_maxdd"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="4"
          android:textSize="@dimen/moneytable"
          android:text="最远距离不超过"
          android:visibility="gone"
          />
      <TextView
          android:id="@+id/tv_moneytable_maxd"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:textSize="@dimen/moneytable"
          />
    </LinearLayout>


  </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
      android:layout_weight="1"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp">
  <TextView
      android:id="@+id/tv_action"
      android:layout_width="165dp"
      android:layout_height="33dp"
      android:layout_marginTop="100dp"
      android:gravity="center"
      android:textSize="15sp"
      android:background="@drawable/loginbt_yaunjiaolan"
      android:textColor="@color/bg"
      android:layout_marginBottom="56dp"
     android:layout_centerInParent="true"
      android:text="开始下单"/>
</RelativeLayout>

</LinearLayout>
</LinearLayout>